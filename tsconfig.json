{
	"include": ["src"],
	"exclude": ["node_modules", "dist"],
	"compilerOptions": {
		"lib": ["ES2022", "DOM", "DOM.Iterable"],
		"module": "ESNext",
		"target": "ESNext",
		"outDir": "dist",
		"declaration": true,
		"allowJs": true,
		"checkJs": true,
		"downlevelIteration": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node",
		"noUnusedParameters": false,
		"skipLibCheck": true,
		"strict": true,
		"jsx": "react-jsx"
	}
}
